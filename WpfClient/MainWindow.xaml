<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <Button x:Name="Exit_btn" Background="Coral" Foreground="Aquamarine"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"  Width="100" Height="20" Content="Exit connection" Click="Exit_btn_Click"></Button>
        <TextBox x:Name="textBoxNum" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Margin="20"></TextBox>
        <Button Background="Coral" Foreground="Aquamarine"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20"  Width="100" Height="20" Content="Show Region" Click="Button_Click"></Button>
        <ListBox x:Name="ResListBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="300"></ListBox>
        
    </Grid>
</Window>
